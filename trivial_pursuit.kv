BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            Label:
                color: (1,0,0.5,1)
                text: "Add A Question"
            Label:
                color: (1,0,0.5,1)
                text: "Question:"
            Label:
                color: (1,0,0.5,1)
                text: "Answer"
            Label:
                color: (1,0,0.5,1)
                text: "Lie 1"
            Label:
                color: (1,0,0.5,1)
                text: "Lie 2"
            Label:
                color: (1,0,0.5,1)
                text: "Category"
            Button:
                background_normal: ""
                background_color: (1,0,0.5,1)
                text: "Add"
        BoxLayout:
            orientation: 'vertical'
            Button:
                background_normal: ""
                background_color: (1,0,0.5,1)
                text: "Roll the Category Dice."
                on_press: app.handle_category_press()
            Label:
                color: (1,0,0.5,1)
                id: category_label
                text: "Category:"
            Label:
                color: (1,0,0.5,1)
                text: app.question
            Button:
                background_normal: ""
                background_color: (1,0,0.5,1)
                on_press: app.handle_answer_press(app.answer_a)
                text: app.answer_a
            Button:
                background_normal: ""
                background_color: (1,0,0.5,1)
                on_press: app.handle_answer_press(app.answer_b)
                text: app.answer_b
            Button:
                background_normal: ""
                background_color: (1,0,0.5,1)
                on_press: app.handle_answer_press(app.answer_c)
                text: app.answer_c
            Label:
                color: (1,0,0.5,1)
                text: "Score >9000"
    Label:
        color: (1,0,0.5,1)
        text: "Status"
        size_hint_y: 0.33