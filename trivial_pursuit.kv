BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            Label:
                color: (1,0,0.5,1)
                text: "Add A Question"
            TextInput:
                color: (1,0,0.5,1)
                text: "Question:"
            TextInput:
                color: (1,0,0.5,1)
                text: "Answer"
            TextInput:
                color: (1,0,0.5,1)
                text: "Lie 1"
            TextInput:
                color: (1,0,0.5,1)
                text: "Lie 2"
            Spinner:
                color: (1,0,0.5,1)
                id: category
                text: "Category"
                values: ("The Dark Arts", "Magical People", "Magical Objects", "Hogwarts", "Animals & Magical Creatures", "Magical Spells & Potions")
            Button:
                background_normal: ""
                background_color: (1,0,0.5,1)
                text: "Add"
                on_press: app.add_question(question.text, answer.text, lie_1.text, lie_2.text, category.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                background_normal: ""
                background_color: (1,0,0.5,1)
                text: "Roll the Category Dice."
                on_press: app.handle_category_press()
            Label:
                color: (1,0,0.5,1)
                id: category_label
                text: "Category:"
            Label:
                color: (1,0,0.5,1)
                text: app.question
            Button:
                background_normal: ""
                background_color: (1,0,0.5,1)
                on_press: app.handle_answer_press(app.answer_a)
                text: app.answer_a
            Button:
                background_normal: ""
                background_color: (1,0,0.5,1)
                on_press: app.handle_answer_press(app.answer_b)
                text: app.answer_b
            Button:
                background_normal: ""
                background_color: (1,0,0.5,1)
                on_press: app.handle_answer_press(app.answer_c)
                text: app.answer_c
            Label:
                color: (1,0,0.5,1)
                text: app.score
    Label:
        color: (1,0,0.5,1)
        text: app.status
        size_hint_y: 0.33